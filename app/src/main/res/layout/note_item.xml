<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="20dp"
     >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <ImageView
            android:id="@+id/icons_time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            />


        <ImageView
            android:id="@+id/icons_icons"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_below="@+id/icons_time"

            />
        
        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appliceh d dhcdc dhcbdc dhcb dcbd dhcbdcd dcbdcbd dbcd"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:maxLines="1"
            android:layout_toStartOf="@+id/icons_time"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:textSize="15sp"
             />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:text="bvbfbvfbvfbfbbfjdcdkcdckdcdcdkckdjd"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="5dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>